<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_gradient"
    tools:context=".Subaru">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:id="@+id/linearlayout1"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageToyota1"
            android:src="@mipmap/subaru1_round"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/imprezzaText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearlayout2"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/linearlayout1">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageToyota2"
            android:src="@mipmap/subaruforester1_round"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/outbacktext"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearlayout3"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/linearlayout2">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageToyota3"
            android:src="@mipmap/subaruforester1_round"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/forestertext"/>
    </LinearLayout>
    <Button
        android:layout_below="@id/linearlayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/internet_test"
        android:text="click"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:textSize="28sp"
        android:textColor="@color/btn_color"
        android:background="@drawable/bg_button_rounded"
        />

</RelativeLayout>